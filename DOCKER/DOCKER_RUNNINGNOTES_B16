[root@ip-172-31-40-108 opt]# cat Dockerfile-multistage 


FROM amazonlinux AS buildstage
RUN yum update  && \
    yum install -y go
ENV GO111MODULE=off
WORKDIR /opt
COPY . .
RUN go build calculator.go



FROM scratch
COPY --from=buildstage  /opt/calculator /opt/calculator
ENTRYPOINT ["/opt/calculator"]



